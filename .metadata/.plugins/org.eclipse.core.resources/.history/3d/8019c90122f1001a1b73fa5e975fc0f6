/*
En este archivo se definen las cadenas que se usan para dan un mensaje al usuario, y no tienen ningún uso en la lógica del programa
*/

#ifndef STRINGS_ENG_H
#define STRINGS_ENG_H

#define MSG_INPUT_VALUE_A        " Enter A (Domain: Integer)"
#define MSG_INPUT_VALUE_B        " Enter B (Domain: Integer)"
#define MSG_INPUT_CHAR           " Enter character: "
#define MSG_INVALID_CHAR_INPUT   " Invalid character"
#define MSG_INVALID_OPERATION    " Invalid operation, try again"
#define MSG_ERROR_DIVISION_ZERO  " Cannot be divided by zero"
#define MSG_ERROR_FACT_NEGATIVE  " Cannot calculate negative number factorial"
#define MSG_WELCOME              " You are welcome!"
#define MSG_GOODBYE              " thank you, come back soon."
#define MSG_EXIT_CONFIRM         " Exit?	  yes (Y)  /  no (n)"

#define LINE                     "----------------------------------------"
#define MSG_CODE                 "  Options                           Code"
#define MSG_CALCULATE            "  Calculate all operations       (Enter)"
#define MSG_SUM                  ". Calculate the sum (A+B)            (+)"
#define MSG_SUBTRACTION          ". Calculate the subtraction (A-B)    (-)"
#define MSG_DIVISION             ". Calculate the division (A/B)       (/)"
#define MSG_MULTIPLICATION       ". Calculate the multiplication (A*B) (*)"
#define MSG_FACTORIAL_A          ". Calculate the factorial A!         (a)"
#define MSG_FACTORIAL_B          ". Calculate the factorial B!         (b)"
#define MSG_CHANGE_VALUES        ". Change values of A and B           (c)"
#define MSG_EXIT                 ". Exit                               (E)"
#define MSG_INPUT_OPERATION      "  Input operation:                    "

#define MSG_PRINT_SUM            "  The result of A+B is: "
#define MSG_PRINT_SUBTRACTION    "  The result of A-B is: "
#define MSG_PRINT_MULTIPLICATION "  The result of A*B is: "
#define MSG_PRINT_DIVISION       "  The result of A/B is: "
#define MSG_PRINT_FACTORIAL_A    "  The result of A! is: "
#define MSG_PRINT_FACTORIAL_B    "  The result of B! is: "

#endif

